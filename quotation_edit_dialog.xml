<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/quotation_dialog_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:maxLines="1"
            android:padding="10dp" />
    </android.support.design.widget.TextInputLayout>

    <me.angrybyte.numberpicker.view.ActualNumberPicker
        android:id="@+id/actual_picker_quantity"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        app:bar_color="#282828"
        app:bar_width="1dp"
        app:bars_count="40"
        app:controls_color="#101010"
        app:draw_over_controls="true"
        app:draw_over_text="false"
        app:fast_controls_color="#000000"

        app:max_value="100"
        app:min_value="0"
        app:selection_color="#A0FF3040"
        app:show_bars="true"
        app:show_controls="true"
        app:show_fast_controls="false"
        app:show_highlight="false"
        app:show_text="false"
        app:text_color="#000000"
        app:text_size="16sp"
        app:value="50"
        android:layout_weight="0.02" />



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/quotation_dialog_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Discount"
            android:maxLines="1"
            android:padding="10dp" />
    </android.support.design.widget.TextInputLayout>

    <me.angrybyte.numberpicker.view.ActualNumberPicker
        android:id="@+id/actual_picker"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        app:bar_color="#282828"
        app:bar_width="1dp"
        app:bars_count="40"
        app:controls_color="#101010"
        app:draw_over_controls="true"
        app:draw_over_text="false"
        app:fast_controls_color="#000000"

        app:max_value="100"
        app:min_value="0"
        app:selection_color="#A0FF3040"
        app:show_bars="true"
        app:show_controls="true"
        app:show_fast_controls="false"
        app:show_highlight="false"
        app:show_text="false"
        app:text_color="#000000"
        app:text_size="16sp"
        app:value="50"
        android:layout_weight="0.02" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:text="Packs:" />

    <Spinner
        android:id="@+id/quotation_dialog_packs"
        android:layout_width="match_parent"

        android:layout_height="wrap_content" />

</LinearLayout>